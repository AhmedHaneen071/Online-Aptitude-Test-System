@model OnlineAptitudeTest.Models.Candidate
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Admin - Candidate Inspection";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="cyber-panel border-neon">
            <div class="d-flex justify-content-between align-items-center mb-4 border-bottom border-dark pb-3">
                <h4 class="text-neon m-0 font-monospace">_SYSTEM_ADMIN: INSPECTING_CANDIDATE_#@Model.CandidateID</h4>
                <a href="/Manager/ManageCandidates" class="text-secondary small text-decoration-none border border-secondary px-2">_CLOSE_FILE</a>
            </div>

            <div class="row">
                <div class="col-md-4 border-end border-dark text-center">
                    <i class="fas fa-user-shield fa-5x text-secondary mb-3"></i>
                    <h5 class="text-white">@Model.Username</h5>
                    <p class="text-muted small">@Model.Email</p>
                    <div class="badge bg-danger w-100 py-2 mt-3">RESTRICTED_ACCESS</div>
                </div>

                <div class="col-md-8 px-4">
                    <h5 class="text-white mb-3">_PERFORMANCE_LOGS</h5>
                    <table class="table table-dark table-hover border-dark small">
                        <thead>
                            <tr class="text-secondary">
                                <th>TEST_DATE</th>
                                <th>SCORE_ACHIEVED</th>
                                <th>STATUS</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var res in Model.Results.OrderByDescending(x => x.TestDate))
                            {
                                <tr>
                                    <td>@(res.TestDate.HasValue ? res.TestDate.Value.ToShortDateString() : "N/A")</td>
                                    <td class="text-neon fw-bold">@res.TotalScore%</td>
                                    <td>
                                        <span class="badge @(res.TotalScore >= 50 ? "bg-success" : "bg-danger")">
                                            @(res.TotalScore >= 50 ? "PASS" : "FAIL")
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>