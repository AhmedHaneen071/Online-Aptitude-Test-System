@model OnlineAptitudeTest.Models.Candidate
@{ Layout = "~/Views/Shared/_Layout.cshtml"; }
<div class="row justify-content-center mt-5">
    <div class="col-md-5 cyber-panel">
        <h5 class="text-white mb-4">_REGISTER_NEW_NODE</h5>
        @using (Html.BeginForm())
        {
            <div class="mb-3">
                <input type="text" name="Username" class="form-control" placeholder="SYSTEM_IDENTIFIER" required />
            </div>
            <div class="mb-3">
                <input type="email" name="Email" class="form-control" placeholder="CONTACT_SIGNAL (EMAIL)" required />
            </div>
            <div class="mb-4">
                <input type="password" name="Password" class="form-control" placeholder="SECURE_KEY_HASH" required />
            </div>
            <button type="submit" class="btn-cyber w-100">PROVISION_ACCOUNT</button>
        }
        <div class="mt-3 text-center"><a href="/Account/Login" class="text-secondary small">ALREADY_REGISTERED?_LOGIN</a></div>
    </div>
</div>