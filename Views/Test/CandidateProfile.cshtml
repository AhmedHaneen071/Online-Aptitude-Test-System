@model OnlineAptitudeTest.Models.Candidate
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "My Profile";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="cyber-panel">
            <div class="text-center mb-4">
                <div class="d-inline-block p-3 border border-neon rounded-circle mb-3">
                    <i class="fas fa-user-circle fa-4x text-white"></i>
                </div>
                <h3 class="text-white">_MY_CORE_IDENTITY</h3>
                <p class="text-secondary small">ACCESS_LEVEL: CANDIDATE</p>
            </div>

            <hr class="border-secondary">

            <div class="p-3 bg-dark-soft mb-3">
                <label class="small text-neon d-block">USERNAME</label>
                <span class="text-white fs-5 font-monospace">@Model.Username</span>
            </div>

            <div class="p-3 bg-dark-soft mb-4">
                <label class="small text-neon d-block">REGISTERED_EMAIL</label>
                <span class="text-white">@Model.Email</span>
            </div>

            <div class="row g-2">
                <div class="col-6">
                    <a href="/Test/Dashboard" class="btn btn-outline-light w-100 btn-sm">DASHBOARD</a>
                </div>
                <div class="col-6">
                    <a href="/Test/MyRecords" class="btn btn-outline-neon w-100 btn-sm">MY_RECORDS</a>
                </div>
            </div>
        </div>
    </div>
</div>